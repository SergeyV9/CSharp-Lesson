<Window x:Class="WPF_lesson_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_lesson_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Window.Resources>
        <FontFamily x:Key="CustomFont">impact</FontFamily>
    </Window.Resources>
    <Grid>
        <TextBox Name="txt" Margin="10" MinHeight="26" VerticalContentAlignment="Center"
        FontSize="46" FontFamily="{Binding Source={StaticResource CustomFont}, Path=Source}"
        Text="Текст"></TextBox>
    </Grid>
</Window>
