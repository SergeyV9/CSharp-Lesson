<Window x:Class="Murray_Davis_formula_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Murray_Davis_formula_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>

        </Grid.RowDefinitions>

        <Button x:Name="button" Content="Расчитать" Width="120" Height="20" Grid.Column="1" Grid.Row="1" Click="Button_Click"/>
        <TextBox x:Name="tb_Ds" Height="25" Text="D max" Grid.Column="0" Grid.Row="1" TextAlignment="Center"/>
        <TextBox x:Name="tb_Dr" Height="25" Text="D plashka" Grid.Column="2" Grid.Row="1" TextAlignment="Center"/>
        <TextBox x:Name="tb_Dot" Height="25" Text="Поле для результата" Grid.Column="1" TextAlignment="Center"/>

    </Grid>
</Window>
